@model List<AutoQuestionGenerator.DatabaseModels.Worksets>
@{
    ViewData["Title"] = "Index";
}

<style>
    #workTbl {
        font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

        #workTbl td, #workTbl th {
            border: 1px solid #ddd;
            padding: 3px;
        }

        #workTbl tr:nth-child(odd) {
            background-color: #9d9393
        }

        #workTbl tr:hover {
            background-color: #ddd;
        }

        #workTbl th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #0d6fa8;
            color: white;
        }
</style>

<h2>Index</h2>
@if (Model.Count > 0)
{
    <table id="workTbl">

        <tr>
            <th>Workset ID</th>
            <th>Date Set</th>
            <th>Date Due</th>
            <th>View</th>
        </tr>
        @foreach (var set in Model)
        {
            <tr>
                <td>@set.WorksetID</td>
                <td>@set.Date_Set.ToString("dd-MM-yyyy")</td>
                <td>@set.Date_Due.ToString("dd-MM-yyyy")</td>
                <td>
                    <a href="~/Set?WorkSetID=@set.WorksetID">View</a>
                    <a href="~/Work/Workset?id=@set.WorksetID">Details</a>
                </td>
            </tr>
        }
    </table>
}