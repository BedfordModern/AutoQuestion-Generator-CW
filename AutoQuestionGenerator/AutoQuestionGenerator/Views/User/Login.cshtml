@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>
<br />
<br />
@using (Html.BeginForm())
{
    <text>Organisation: @Html.TextBoxFor(x => x.Organisation) </text><br /><br />
    <text>Username: @Html.TextBoxFor(m => m.Username)</text><br /><br />
    <text>Password: @Html.TextBoxFor(m => m.Password, new { type = "password" })</text>
    <button type="submit" class="=btn btn-primary">Login</button>
    if (Model != null && !string.IsNullOrEmpty(Model.Error))
    {
        <br />
        <p style="color:red">@Model.Error</p>
    }
}
